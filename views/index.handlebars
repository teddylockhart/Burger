<h1>Burgers!</h1>

<h2>Burgers that are not picked up!</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">SLEEP TIME!</button>
        </form>

        {{!-- {{> cats/delete-cat}} --}}
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Cats that are devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
          <button type="submit">WAKE UP!</button>
        </form>

        {{!-- {{> cats/delete-cat}} --}}
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="slee">Ordered?</label><br>
    <input type="radio" name="sleepy" value="1" checked> Ready!<br>
    <input type="radio" name="sleepy" value="0"> Eaten
  </div>

  <button type="submit">Add Burger</button>
</form>
